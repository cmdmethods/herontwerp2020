extends layout

block content

  main.overview
    h1(class=['motto', category.strategy])= category.name + ": " + category.motto
    for card in cards
      case card.type
        when 'card'
          section(class=['card', card.strategy], id=card.id)
            a(href="/cards/"+card.id)
              header
                div(class=['category-icon', card.strategy])
                h1!= card.name
              div.cardcontent
                img(src=card.image, alt=card.name, width=card.image_width, height=card.image_height)
                h2 Why?
                p #{card.why}
            div.button-box
              a(class=['button','addToFavorites'], href="/favorites") Save to favorites
              <a class="button call-to-action" href="/cards/#{card.id}">More info</a>
        when 'category-description'
          <a href="/#{card.strategy}">
            section(class=['category-description', card.strategy])
              header
                div(class=['category-icon', card.strategy])
                h1= card.name
              p
                em= card.motto
              p!= card.why
          </a>
